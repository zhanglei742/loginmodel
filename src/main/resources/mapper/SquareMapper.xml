<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="SquareMapper">
    <resultMap id="BaseResultMap" type="com.loginmodel.loginmodel.domain.Square">
        <result column="expert_headpicture" jdbcType="VARCHAR" property="expertHeadpicture" />
        <result column="expert_name" jdbcType="VARCHAR" property="expertName" />
        <result column="expert_position" jdbcType="VARCHAR" property="expertPosition" />
        <result column="question_title" jdbcType="VARCHAR" property="questionTitle" />
        <result column="answer_money" jdbcType="VARCHAR" property="answerMoney" />
        <result column="question_share" jdbcType="VARCHAR" property="questionShare" />
        <result column="answer_value" jdbcType="VARCHAR" property="answerValue" />
    </resultMap>

    <!--查询ask表中所有的数据，返回到前端-->
    <select id="selectAll" resultMap="BaseResultMap">
        SELECT  expert.expert_headpicture,expert.expert_name,expert.expert_position,
        answer.answer_money,answer.answer_value,ask.question_title,ask.question_share
        FROM ask,expert,answer
        where expert.expert_name=answer.answer_name and answer.question_id=ask.question_id
    </select>

</mapper>
